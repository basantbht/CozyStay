<%- include('partials/head') %>
    </head>

    <body>
        <%- include('partials/nav') %>
            <main>
                <h1 class="text-center mt-5 text-4xl">
                    Here are our registered homes:
                </h1>
                <div class="grid grid-cols-1 sm:grid-cols-2 md:grid-cols-3 gap-6 p-6">
  <% registeredHome.forEach(home => { %>
    <div class="bg-white rounded-2xl shadow-lg overflow-hidden hover:shadow-xl transition-shadow duration-300">
      <img class="w-full h-48 object-cover" src="https://www.shutterstock.com/image-photo/perfect-neighbourhood-houses-suburb-summer-260nw-1937913955.jpg" alt="<%= home.houseName %>">
      <div class="p-4">
        <h2 class="text-xl font-semibold text-gray-800 capitalize"><%= home.houseName %></h2>
        <p class="text-gray-600 mt-1">📍 <%= home.location %></p>
        <p class="text-gray-700 mt-2">💰 Price: Rs. <%= home.price %></p>
        <p class="text-yellow-500 mt-1">⭐ Rating: <%= home.rating %>/5</p>
        <button class="mt-4 w-full bg-blue-600 text-white py-2 rounded-xl hover:bg-blue-700 transition">View Details</button>
      </div>
    </div>
  <% }) %>
</div>
            </main>
    </body>

    </html>