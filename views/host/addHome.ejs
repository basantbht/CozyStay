<%- include('../partials/head') %>
    </head>

    <body>
        <%- include('../partials/nav') %>

            <h1 class="text-center mt-5 text-4xl">
                Register your home
            </h1>
            <main>

                <form action="/host/add-home" method="POST" class="flex flex-col justify-center items-center">

                    <input class="border-2 p-2 ml-1 rounded-sm w-xl mt-5" type="text" name="houseName" placeholder="Enter the name of your house" />

                    <input class="border-2 p-2 ml-1 rounded-sm w-xl mt-5" type="text" name="price" placeholder="Price per night" />

                    <input class="border-2 p-2 ml-1 rounded-sm w-xl mt-5" type="text" name="location" placeholder="Location" />

                    <input class="border-2 p-2 ml-1 rounded-sm w-xl mt-5" type="text" name="rating" placeholder="Rating" />

                    <input class="border-2 p-2 ml-1 rounded-sm w-xl mt-5" type="text" name="photoUrl" placeholder="Enter photo url" />

                    <input type="submit" class="bg-red-400 rounded-sm p-2 text-white w-25 mt-4  cursor-pointer" />
                </form>
            </main>
    </body>

    </html> 